function sumtosingledigit(number)
{
  var sum=0;
  while(number>=10)
  {
    var digit=number%10;
    sum+=digit;
    if(sum>10)
      sum=sum%10+1;
    number=Math.floor(number/10);
  }
  
  sum+=number;
  if(sum>10)
    sum=sum%10+1;

  return sum;
}

console.log('sumtosingledigit:'+sumtosingledigit(123));
